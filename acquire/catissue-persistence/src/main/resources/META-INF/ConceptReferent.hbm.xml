<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" >
    <class
        name="edu.wustl.catissuecore.domain.pathology.ConceptReferent"
        table="CATISSUE_CONCEPT_REFERENT"
        dynamic-update="false"
        dynamic-insert="false"
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_CONCEPT_REFERENT_SEQ</param>
            </generator>
        </id>

        <many-to-one
            name="concept"
            class="edu.wustl.catissuecore.domain.pathology.Concept"
            cascade="save-update"
             
            update="true"
            insert="true"
            column="CONCEPT_ID"
            lazy="false" 
        />

        <many-to-one
            name="conceptReferentClassification"
            class="edu.wustl.catissuecore.domain.pathology.ConceptReferentClassification"
            cascade="save-update"
             
            update="true"
            insert="true"
            column="CONCEPT_CLASSIFICATION_ID"
        />

        <many-to-one
            name="deIdentifiedSurgicalPathologyReport"
            class="edu.wustl.catissuecore.domain.pathology.DeidentifiedSurgicalPathologyReport"
            cascade="none"
             
            update="true"
            insert="true"
            column="DEIDENTIFIED_REPORT_ID"
            not-null="false"
        />

        <property
            name="endOffset"
            type="long"
            update="true"
            insert="true"
            column="END_OFFSET"
            length="30"
        />

        <property
            name="isModifier"
            type="boolean"
            update="true"
            insert="true"
            column="IS_MODIFIER"
            length="30"
        />

        <property
            name="isNegated"
            type="boolean"
            update="true"
            insert="true"
            column="IS_NEGATED"
            length="30"
        />

        <property
            name="startOffset"
            type="long"
            update="true"
            insert="true"
            column="START_OFFSET"
            length="30"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ConceptReferent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
