<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.Race"
        table="CATISSUE_RACE"
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_RACE_SEQ</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ParticipantMedicalIdentifier.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="raceName"
            type="string"
            update="true"
            insert="true"
            column="RACE_NAME"
            length="50"
        />

        <many-to-one
            name="participant"
            class="edu.wustl.catissuecore.domain.Participant"
            cascade="none"
             
            update="true"
            insert="true"
            column="PARTICIPANT_ID"  
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ParticipantMedicalIdentifier.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
