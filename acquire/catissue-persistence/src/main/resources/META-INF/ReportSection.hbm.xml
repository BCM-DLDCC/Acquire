<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.pathology.ReportSection"
        table="CATISSUE_REPORT_SECTION"
        dynamic-update="false"
        dynamic-insert="false"
        lazy="true"
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_REPORT_SECTION_SEQ</param>
            </generator>
        </id>

        <property
            name="documentFragment"
            type="string"
            update="true"
            insert="true"
            column="DOCUMENT_FRAGMENT"
            length="1000"
        />

        <property
            name="endOffSet"
            type="integer"
            update="true"
            insert="true"
            column="END_OFFSET"
            length="10"
        />

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
            length="100"
        />

        <property
            name="startOffSet"
            type="integer"
            update="true"
            insert="true"
            column="START_OFFSET"
            length="10"
        />

        <many-to-one
            name="textContent"
            class="edu.wustl.catissuecore.domain.pathology.TextContent"
            cascade="none"
             
            update="true"
            insert="true"
            column="TEXT_CONTENT_ID"
            not-null="false"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ReportSection.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
