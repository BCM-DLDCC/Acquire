<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="edu.wustl.catissuecore.domain.ExternalIdentifier"
        table="CATISSUE_EXTERNAL_IDENTIFIER"
		lazy="true"
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_EXTERNAL_ID_SEQ</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ExternalIdentifier.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
            length="255"
        />

        <property
            name="value"
            type="string"
            update="true"
            insert="true"
            column="VALUE"
            length="255"
        />

        <many-to-one
            name="specimen"
            class="edu.wustl.catissuecore.domain.Specimen"
            cascade="none"
             
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ExternalIdentifier.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
