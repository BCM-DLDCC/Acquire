<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping
>
    <class
        name="edu.wustl.catissuecore.domain.Biohazard"
        table="CATISSUE_BIOHAZARD"
		lazy="false" 
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_BIOHAZARD_SEQ</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Biohazard.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
            length="255"
            not-null="true"
            unique="true"
        />

        <property
            name="comment"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />

        <property
            name="type"
            type="string"
            update="true"
            insert="true"
            column="TYPE"
            length="50"
        />

        <set
            name="specimenCollection"
            table="CATISSUE_SPECIMEN_BIOHZ_REL"
            lazy="true"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >
        
        <cache usage="read-write" />

            <key
                column="BIOHAZARD_ID"
            >
            </key>

            <many-to-many
                class="edu.wustl.catissuecore.domain.Specimen"
                column="SPECIMEN_ID"
                 
             />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Biohazard.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
