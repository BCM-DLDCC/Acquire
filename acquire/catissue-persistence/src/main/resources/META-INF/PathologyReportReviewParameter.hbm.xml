<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.pathology.PathologyReportReviewParameter"
        table="CATISSUE_REVIEW_PARAMS"
        dynamic-update="false"
        dynamic-insert="false"
        lazy="true"
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_REVIEW_PARAMS_SEQ</param>
            </generator>
        </id>

        <property
            name="reviewerRole"
            type="string"
            update="true"
            insert="true"
            column="REVIEWER_ROLE"
            length="100"
        />

        <many-to-one
            name="surgicalPathologyReport"
            class="edu.wustl.catissuecore.domain.pathology.SurgicalPathologyReport"
            cascade="none"
             
            update="true"
            insert="true"
            column="REPORT_ID"
            not-null="false"
        />

        <property
            name="status"
            type="string"
            update="true"
            insert="true"
            column="STATUS"
            length="100"
        />

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />

        <many-to-one
            name="user"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
             
            update="true"
            insert="true"
            column="USER_ID"
        />

        <property
            name="comment"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-PathologyReportReviewParameter.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
