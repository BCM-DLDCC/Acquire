<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.Participant"
        table="CATISSUE_PARTICIPANT"
        dynamic-update="false"
        dynamic-insert="false"
		lazy="true"
    >

    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_PARTICIPANT_SEQ</param>
            </generator>
        </id>

        <property
            name="lastName"
            type="string"
            update="true"
            insert="true"
            column="LAST_NAME"
            length="255"
        />

        <property
            name="firstName"
            type="string"
            update="true"
            insert="true"
            column="FIRST_NAME"
            length="255"
        />

        <property
            name="middleName"
            type="string"
            update="true"
            insert="true"
            column="MIDDLE_NAME"
            length="255"
        />

        <property
            name="birthDate"
            type="date"
            update="true"
            insert="true"
            column="BIRTH_DATE"
        />

        <property
            name="gender"
            type="string"
            update="true"
            insert="true"
            column="GENDER"
            length="20"
        />

        <property
            name="sexGenotype"
            type="string"
            update="true"
            insert="true"
            column="GENOTYPE"
            length="50"
        />
        <set
            name="raceCollection"
            table="CATISSUE_RACE"
            fetch="join" lazy="true"
            inverse="true"
            cascade="save-update,all-delete-orphan"
            sort="unsorted"
        >

        <cache usage="read-write" />

              <key
                  column="PARTICIPANT_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.Race"
              />
        </set>

        <property
            name="ethnicity"
            type="string"
            update="true"
            insert="true"
            column="ETHNICITY"
            length="50"
        />

        <property
            name="socialSecurityNumber"
            type="string"
            update="true"
            insert="true"
            column="SOCIAL_SECURITY_NUMBER"
            length="50"
            unique="true"
        />

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"
        />

        <property
            name="deathDate"
            type="date"
            update="true"
            insert="true"
            column="DEATH_DATE"
        />

        <property
            name="vitalStatus"
            type="string"
            update="true"
            insert="true"
            column="VITAL_STATUS"
            length="50"
        />

         <property
            name="metaPhoneCode"
            type="string"
            update="true"
            insert="true"
            column="LNAME_METAPHONE"
            length="50"
        />

        <set
            name="participantMedicalIdentifierCollection"
            table="CATISSUE_PART_MEDICAL_ID"
            fetch="join" lazy="true"
            inverse="true"
            cascade="save-update,all-delete-orphan"
            sort="unsorted"
        >

        <cache usage="read-write" />

              <key
                  column="PARTICIPANT_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.ParticipantMedicalIdentifier"
              />
        </set>

        <set
            name="collectionProtocolRegistrationCollection"
            table="CATISSUE_COLL_PROT_REG"
            fetch="join" lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

        <cache usage="read-write" />

              <key
                  column="PARTICIPANT_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.CollectionProtocolRegistration"
              />
        </set>

		<set
            name="participantRecordEntryCollection"
            table="CATISSUE_PARTICIPANT_REC_NTRY"
            lazy="true"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="PARTICIPANT_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.deintegration.ParticipantRecordEntry"
              />
        </set>


        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Participant.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
