<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.pathology.ReportContent"
        table="CATISSUE_REPORT_CONTENT"
        dynamic-update="false"
        dynamic-insert="false"
        lazy="true"
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_REPORT_CONTENT_SEQ</param>
            </generator>
        </id>

        <property
            name="data"
            type="gov.nih.nci.common.util.StringClobType"
            update="true"
            insert="true"
            column="REPORT_DATA"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ReportContent.xml
            containing the additional properties and place it in your merge dir.
        -->

        <joined-subclass
            name="edu.wustl.catissuecore.domain.pathology.TextContent"
            table="CATISSUE_REPORT_TEXTCONTENT"
            dynamic-update="false"
            dynamic-insert="false"
            lazy="true"
        >
        <key
            column="IDENTIFIER"
        />

        <set
            name="reportSectionCollection"
            table="REPORT_SECTION"
            fetch="join" lazy="false" 
            inverse="true"
            cascade="all"
            sort="unsorted"
        >
        
        <cache usage="read-write" />

              <key
                  column="TEXT_CONTENT_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.pathology.ReportSection"
              />
        </set>

        <many-to-one
            name="surgicalPathologyReport"
            class="edu.wustl.catissuecore.domain.pathology.SurgicalPathologyReport"
            cascade="none"
             
            update="true"
            insert="true"
            column="REPORT_ID"
            not-null="false"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.wustl.catissuecore.domain.pathology.BinaryContent"
            table="CATISSUE_REPORT_BICONTENT"
            dynamic-update="false"
            dynamic-insert="false"
            lazy="true"
        >
        <key
            column="IDENTIFIER"
        />

        <many-to-one
            name="surgicalPathologyReport"
            class="edu.wustl.catissuecore.domain.pathology.SurgicalPathologyReport"
            cascade="none"
             
            update="true"
            insert="true"
            column="REPORT_ID"
            not-null="false"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.wustl.catissuecore.domain.pathology.XMLContent"
            table="CATISSUE_REPORT_XMLCONTENT"
            dynamic-update="false"
            dynamic-insert="false"
            lazy="true"
        >
        <key
            column="IDENTIFIER"
        />

        <many-to-one
            name="surgicalPathologyReport"
            class="edu.wustl.catissuecore.domain.pathology.SurgicalPathologyReport"
            cascade="none"
             
            update="true"
            insert="true"
            column="REPORT_ID"
            not-null="false"
        />

        </joined-subclass>

    </class>

</hibernate-mapping>
