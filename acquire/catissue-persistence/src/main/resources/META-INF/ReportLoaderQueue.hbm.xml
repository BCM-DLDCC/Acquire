<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.pathology.ReportLoaderQueue"
        table="CATISSUE_REPORT_QUEUE"
        dynamic-update="false"
        dynamic-insert="false"
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_REPORT_QUEUE_SEQ</param>
            </generator>
        </id>

        <property
            name="status"
            type="string"
            update="true"
            insert="true"
            column="STATUS"
            length="10"
        />

		<property
            name="surgicalPathologyNumber"
            type="string"
            update="true"
            insert="true"
            column="SURGICAL_PATHOLOGY_NUMBER"
            length="255"
        />
        
        <property
            name="participantName"
            type="string"
            update="true"
            insert="true"
            column="PARTICIPANT_NAME"
            length="255"
        />
        
        <property
            name="siteName"
            type="string"
            update="true"
            insert="true"
            column="SITE_NAME"
            length="255"
        />
        
         <property
	    	name="reportLoadedDate"
	    	type="date"
	    	update="true"
	    	insert="true"
	    	column="REPORT_LOADED_DATE"
        />
        
        <property
	    	name="reportCollectionDate"
	    	type="date"
	    	update="true"
	    	insert="true"
	    	column="REPORT_COLLECTION_DATE"
        />
        
        <set
            name="participantCollection"
            table="CATISSUE_REPORT_PARTICIP_REL"
            fetch="join" lazy="false" 
            inverse="false"
            cascade="none"
            sort="unsorted"
        >
        
        <cache usage="read-write" />

              <key
                  column="REPORT_ID"
              />

              <many-to-many
                  class="edu.wustl.catissuecore.domain.Participant"
                  column="PARTICIPANT_ID"
                   
              />

        </set>

        <property
            name="reportText"
            type="gov.nih.nci.common.util.StringClobType"
            update="true"
            insert="true"
            column="REPORT_TEXT"
        />

        <many-to-one
            name="specimenCollectionGroup"
            class="edu.wustl.catissuecore.domain.SpecimenCollectionGroup"
            cascade="none"
             
            update="true"
            insert="true"
            column="SPECIMEN_COLL_GRP_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ReportLoaderQueue.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
