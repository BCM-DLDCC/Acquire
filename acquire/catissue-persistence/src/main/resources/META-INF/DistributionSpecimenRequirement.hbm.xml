<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.DistributionSpecimenRequirement"
        table="CATISSUE_DISTRIBUTION_SPEC_REQ" 
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_DIST_SPECIMEN_REQ_SEQ</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-DistributionSpecimenRequirement.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="specimenType"
            type="string"
            update="true"
            insert="true"
            column="SPECIMEN_TYPE"
            length="50"
        />

        <property
            name="tissueSite"
            type="string"
            update="true"
            insert="true"
            column="TISSUE_SITE"
            length="150"
        />

        <property
            name="pathologyStatus"
            type="string"
            update="true"
            insert="true"
            column="PATHOLOGY_STATUS"
            length="50"
        />

        <property
            name="specimenClass"
            type="string"
            update="true"
            insert="true"
            column="SPECIMEN_CLASS"
            length="50"
        />
 
         <property
            name="quantity"
            type="double"
            update="true"
            insert="true"
            column="QUANTITY"
        />
        
        <many-to-one
            name="distributionProtocol"
            class="edu.wustl.catissuecore.domain.DistributionProtocol"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="DISTRIBUTION_PROTOCOL_ID"
        />
    </class>

</hibernate-mapping>
